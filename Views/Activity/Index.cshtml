@model ActivityViewModel

<div class="d-flex flex-column gap-5 panels">

    <div class="d-flex justify-content-center align-items-center gap-5">
	    <h1>
		    Activities list
	    </h1>

    <a asp-controller="Activity" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> Add new</a>
    </div>

    <div class="grid grid-col-3 row-gap-3 column-gap-5">

        @if (Model.ActivitiesToday.Any())
        {
            <div class="subgrid span-row-4 panel panel--green">
                <h4>Today's Activities</h4>

                @await Html.PartialAsync("_ActivityList", Model.ActivitiesToday,
                    new ViewDataDictionary(ViewData)
                    {
                        { "ShowTime", true},
                        { "BadgeColor", "success" }
                    })
            </div>

        }

        @if (Model.UpcomingActivities.Any())
        {
            <div class="subgrid span-row-4 panel panel--blue">

                <h4>Upcoming Activities</h4>
                @await Html.PartialAsync("_ActivityList", Model.UpcomingActivities,
                    new ViewDataDictionary(ViewData)
                    {
                        { "ShowCountdown", true },
                        { "BadgeColor", "primary" }
                    })

            </div>

        }

        @if (Model.PastActivities.Any())
        {
            <div class="subgrid span-row-4 panel panel--red">

                <h4>Past Activities</h4>
                @await Html.PartialAsync("_ActivityList", Model.PastActivities,
                    new ViewDataDictionary(ViewData)
                    {
                        { "ShowCountdown", true },
                        { "BadgeColor", "danger" }
                    })

            </div>
        }

    </div>

</div>