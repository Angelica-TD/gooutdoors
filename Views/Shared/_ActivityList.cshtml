@model IEnumerable<Activity>
@{
    var showCountdown = ViewBag.ShowCountdown ?? false;
    var showTime = ViewBag.ShowTime ?? false;
    var badgeColor = ViewBag.BadgeColor ?? "primary";
}

<div class="list-group gap-3 mb-4 subgrid span-row-3">
    @foreach (var obj in Model)
    {
        <a asp-controller="Activity" asp-action="Details" asp-route-id="@obj.Id" class="list-group-item list-group-item-action d-flex gap-3 py-3">
            <div class="d-flex gap-2 w-100 justify-content-between align-items-start">
                <div class="d-flex flex-column justify-content-between h-100">
                    <h6 class="mb-0">@obj.Name</h6>
                    @if (!string.IsNullOrWhiteSpace(obj.Details))
                    {
                        <p>@obj.Details</p>
                    }
                    <p class="mb-0 opacity-75">Date: @obj.StartDate.ToString("d")</p>
                </div>

                @if (showCountdown)
                {
                    if (obj.StartDate > DateTime.Now)
                    {
                        <span class="badge text-bg-@badgeColor rounded-pill d-flex align-items-center">
                            in @obj.DaysCountdown days
                        </span>
                    }
                    else if (obj.StartDate < DateTime.Now)
                    {
                        <span class="badge text-bg-@badgeColor rounded-pill d-flex align-items-center">
                            @obj.DaysPast days ago
                        </span>
                    }
                }
                @if (showTime)
                {
                    <span class="badge text-bg-@badgeColor rounded-pill d-flex align-items-center">
                        starts @DateTime.Today.Add(obj.StartTime).ToString("h:mm tt")
                    </span>
                }
            </div>
        </a>
    }
</div>